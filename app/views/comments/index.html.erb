<h1>Listing comments</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Texto</th>
    <th>Cocktail</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @comments.each do |comment| %>
  <tr>
    <td><%= comment.name %></td>
    <td><%= comment.texto %></td>
    <td><%= comment.cocktail.name %></td>
    <td><%= link_to 'Show', [@cocktail,comment] %></td>
    <td><%= link_to 'Edit', edit_cocktail_comment_path(@cocktail,comment) %></td>
    <td><%= link_to 'Destroy', [@cocktail,comment], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Comment', new_cocktail_comment_path(@cocktail) %>
<%= link_to 'Back', @cocktail %>
